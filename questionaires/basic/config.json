{
  "name": "basic",
  "groups": {
    "identity": {
      "recurring": false,
      "questions": {
        "year_of_birth": { // De eerste vraag ontbreekt: vul je in voor a) jezelf b) iemand uit mijn huishouden, C) een ander.
          "type": "integer",
          "variant": "year",
          "required": true,
          "min": 1900,
          "max": 2020
        },
        "sex": {
          "type": "select",
          "other": true,
          "options": { "male", "female", "Other", "I don't want to share" }
        }
      }
    },
    "symptoms": {
      "questions": {
        "fever": {
          "type": "boolean",
          "required": true,
          "filter": true
        },
        "fever_degrees": {
          "type": "float",
          "min": 36.0,
          "max": 41.0,
          "variant": "temperature",
          "conditions": [
            {
              "question": "fever",
              "answer": true
            }
          ]
        },
        "dry_cough": {
          "type": "boolean",
          "required": true,
          "filter": true
        },
        "fatigue": {
          "type": "boolean",
          "required": true,
          "filter": true
        },
        "cough_slime": {
          "type": "boolean"
        },
        "short_breath": {
          "type": "boolean"
        },
        "muscle_ache": {
          "type": "boolean"
        },
        "sore_throat": {
          "type": "boolean"
        },
        "headache": {
          "type": "boolean"
        },
        "chills": {
          "type": "boolean"
        },
        "nauseous": {
          "type": "boolean"
        },
        "other_symptoms": {
          "type": "text"
        },
        "start_symptoms": { // Dit is geen datum meer maar aantal dagen. "hoeveel dagen geleden dat je symptomen begonnen". Zal moeten berekend worden door datetoday-dagen=datum eerste symptoom.
          "type": "date"
        },
        "first_symptom": { // Dit is een multi-select vraag geworden.
          "type": "text"
        },
        "contact_with_positively_tested_person": {
          "type": "boolean"
        },
        "quarantined": {
          "type": "boolean"
        },
        "social_distancing": { // Opties voor antwoorden hier is multiple choice: Ja, zoveel mogelijk beperkt; soms; Nee; weet ik niet.
          "type": "boolean"
        },
        "home_leaves": {
          "type": "integer"
        },
        "travel_last_weeks": {
          "type": "multiselect",
          "variant": "country"
        }
      }
    }
  }
}
